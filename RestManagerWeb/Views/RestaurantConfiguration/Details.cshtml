@model RestaurantConfigurationViewModel

@{
    ViewBag.Title = "Configure Restaurant";
    Layout = "_Layout";
}

<h2>Configure Restaurant</h2>

<div class="text-center">
    <div>
        <ul>
            @for (int i = 0; i < Model.Tables.Count; i++)
            {
                <li>
                    <b>@Html.DisplayFor((m) => Model.Tables[i].Name)</b>
                    with <b>@Html.DisplayFor((m) => Model.Tables[i].Size)</b> seats;
                </li>
            }
        </ul>
    </div>

    @using (Html.BeginForm("AddOrUpdate", "RestaurantConfiguration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(t => t.IsInitialized)

        <div class="form-group">
            @Html.LabelFor(t => Model.ConfigurationName, new { @class = "control-label" })
            @if (Model.IsInitialized)
            {
                @Html.TextBoxFor(t => Model.ConfigurationName, new { @class = "form-control", @readonly = "readonly" })
            }
            else
            {
                @Html.TextBoxFor(t => Model.ConfigurationName, new { @class = "form-control" })
            }
        </div>
        <div class="form-group">
            @Html.LabelFor(t => Model.NewTable.Name, new { @class = "control-label" })
            @Html.TextBoxFor(t => Model.NewTable.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(t => Model.NewTable.Size, new { @class = "control-label" })
            @Html.TextBoxFor(t => Model.NewTable.Size, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    }
</div>
